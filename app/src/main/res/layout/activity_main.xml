<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ksusha.tetris.MainActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">
    //    tools:layout_editor_absoluteY="8dp"
   //     tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:src="@drawable/tetris1"
            android:scaleType="centerCrop"/>
        </LinearLayout>

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:id="@+id/textView1"
            android:layout_height="wrap_content"
            android:text=" "></TextView>
    <Button
        android:id="@+id/buttonStart"
        android:layout_marginTop="-50dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickStart"
        android:text="START"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />


    <Button
        android:id="@+id/buttonScores"
        android:layout_marginTop="1dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickScores"
        android:text="MY SCORES"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="231dp" />

        <ImageButton
            android:id="@+id/musicOff"
            android:layout_marginTop="1dip"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickExit"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="231dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            app:srcCompat="@android:drawable/ic_lock_silent_mode" />

        <ImageButton
            android:id="@+id/musicOn"
            android:layout_marginTop="1dip"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickExit"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="231dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
