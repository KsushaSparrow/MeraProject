<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dip"
    android:background="#ddd">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="#FFFFFF"
        android:textColor="#E52B50"
        android:textAlignment="gravity"
        android:textSize="32dip"/>

    <TextView
        android:id="@+id/text_topic1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:textColor="#E52B50"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textSize="32dip"/>

    <ImageView
        android:id="@+id/icon1"
        android:layout_marginTop="100dp"
        android:layout_width="70dp"
        android:layout_height="105dp"
        android:background="#000000"
        android:src="@drawable/l"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/icon2"
        android:layout_marginTop="100dp"
        android:layout_width="70dp"
        android:layout_height="105dp"
        android:layout_marginLeft="105dp"
        android:background="#000000"
        android:src="@drawable/j"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/icon3"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="135dp"
        android:background="#000000"
        android:src="@drawable/t"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/icon4"
        android:layout_width="35dp"
        android:layout_height="145dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="250dp"
        android:background="#000000"
        android:scaleType="centerCrop"
        android:src="@drawable/i"/>

    <ImageView
        android:id="@+id/icon5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="325dp"
        android:background="#000000"
        android:scaleType="centerCrop"
        android:src="@drawable/o"/>

    <ImageView
        android:id="@+id/icon6"
        android:layout_width="105dp"
        android:layout_height="70dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="325dp"
        android:background="#000000"
        android:scaleType="centerCrop"
        android:src="@drawable/s"/>

    <ImageView
        android:id="@+id/icon7"
        android:layout_width="105dp"
        android:layout_height="70dp"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="325dp"
        android:background="#000000"
        android:scaleType="centerCrop"
        android:src="@drawable/z"/>

    <ImageView
        android:id="@+id/arrowRight"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="240dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/arrow_right"/>

    <ImageView
        android:id="@+id/arrowLeft"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="240dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/arrow_left"/>

    <ImageView
        android:id="@+id/beforeReduce"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="80dp"
        android:background="#000000"
        android:scaleType="centerCrop"
        android:src="@drawable/tetris_not_reduced"/>

    <ImageView
        android:id="@+id/arrowDown"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_centerInParent="true"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/arrow_down"/>

    <ImageView
        android:id="@+id/afterReduce"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="280dp"
        android:background="#000000"
        android:scaleType="centerCrop"
        android:src="@drawable/tetris_reduced"/>

    <TextView
        android:id="@+id/description1"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignBottom="@id/text_view"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        android:textColor="#E52B50"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textSize="28dip"/>

    <ImageView
        android:id="@+id/bonus"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="100dp"
        android:background="#000000"
        android:scaleType="centerCrop"
        android:src="@drawable/bonus"/>

    <TextView
        android:id="@+id/description2"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_marginLeft="40dp"
        android:layout_alignBottom="@id/text_view"
        android:layout_marginBottom="80dp"
        android:background="#FFFFFF"
        android:textColor="#E52B50"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textSize="28dip"/>

</RelativeLayout>